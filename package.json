{
  "name": "hr-content-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node production.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "test": "NODE_ENV=test node test/integration.test.js",
    "test:workflow": "NODE_ENV=test node -e \"process.argv.push('workflow'); require('./test/integration.test.js')\"",
    "test:api": "NODE_ENV=test node -e \"process.argv.push('api'); require('./test/integration.test.js')\"",
    "test:data": "NODE_ENV=test node -e \"process.argv.push('data'); require('./test/integration.test.js')\"",
    "test:performance": "NODE_ENV=test node -e \"process.argv.push('performance'); require('./test/integration.test.js')\"",
    "test:user": "NODE_ENV=test node -e \"process.argv.push('user'); require('./test/integration.test.js')\"",
    "analyze": "node src/brunchAnalyzer-simple.js",
    "collect": "node -e \"const HRContentScraper = require('./src/scrapers/hrContentScraper'); new HRContentScraper().run();\"",
    "filter": "node -e \"const ContentFilter = require('./src/analyzers/contentFilter'); new ContentFilter().run();\"",
    "generate": "node -e \"const ArticleWriter = require('./src/writers/articleWriter'); new ArticleWriter().run();\"",
    "quality": "node -e \"const QualityChecker = require('./src/analyzers/qualityChecker'); new QualityChecker().run();\"",
    "workflow": "node -e \"const ContentCreationWorkflow = require('./src/workflows/contentCreation'); ContentCreationWorkflow.run();\"",
    "publish-workflow": "node -e \"const { getWorkflowManager } = require('./src/workflows/publishingWorkflow'); const wm = getWorkflowManager(); const wf = wm.createWorkflow({ autoApprove: true }); wf.start();\"",
    "brunch-publish": "node -e \"const BrunchPublisher = require('./src/publishers/brunchPublisher'); console.log('브런치 발행 테스트는 웹 대시보드에서 실행해주세요.');\"",
    "scheduler": "node src/scheduler.js",
    "jobs": "node -e \"const { getJobManager } = require('./src/jobs/jobManager'); const jm = getJobManager(); jm.start(); console.log('Job Manager 시작됨. Ctrl+C로 종료');\"",
    "setup": "node scripts/setup.js",
    "verify": "node scripts/verify.js",
    "health": "curl -s http://localhost:3001/health | jq || curl -s http://localhost:3001/health",
    "metrics": "curl -s http://localhost:3001/metrics || echo 'Metrics endpoint not available'",
    "logs": "tail -f logs/combined.log || echo 'Log file not found'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "axios": "^1.10.0",
    "body-parser": "^2.2.0",
    "cheerio": "^1.1.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "natural": "^8.1.0",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.4",
    "openai": "^5.8.2",
    "puppeteer": "^24.10.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "nodemon": "^3.1.10"
  },
  "description": ""
}
